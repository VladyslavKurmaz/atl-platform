<?xml version='1.0' encoding='utf-8'?>
<widget id="io.attlas.mobile.client" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>@tlas</name>
    <description>
        @tlas single-point communication application
    </description>
    <author email="vladislav.kurmaz@gmail.com" href="https://attlas.io">
        Vladyslav Kurmaz
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <engine name="browser" spec="^6.0.0" />
    <engine name="android" spec="^8.0.0" />
</widget>
